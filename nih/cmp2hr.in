#
# convert output of pkg_cmp_summary(1) to human readable format
#

{
	pkgpath = pkgname = ver1 = ver2 = ua = ""
	pkgpath = $2
	pkgname = $3
	if ($1 ~ /^[<>=!]$/){
		ver1    = $4
		ver2    = $5
		ua      = $6
	}else if ($1 == "-"){
		ver1    = $4
		ua      = $5
	}else if ($1 == "+"){
		ver2    = $4
	}

	if ($1 == "<") op = ""
	else op = $1

	if (ua == "U") op = op "U"

	printf "%3s %-30s %-15s %-12s %-12s\n", op, pkgpath, pkgname, ver1, ver2
}
