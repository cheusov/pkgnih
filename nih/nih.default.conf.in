}
summary2packages_to_be_removed (){
    # input: pkg_summary
    show_summary_N "$@" | indent
}
summary2meta_packages (){
    # input: pkg_summary
    show_summary_BC "$@"
}
summary2available_packages (){
    # input: pkg_summary
    show_summary_NC "$@"
}
summary2installed_packages (){
    # input: pkg_summary
    show_summary_NC "$@"
}
summary2markers (){
    # input: pkg_summary
    grep -E '^(PKGNAME|PKGPATH|COMMENT|automatic|try_out)=|^$' "$@"
}

